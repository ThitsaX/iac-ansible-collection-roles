apiVersion: v1
kind: Namespace
metadata:
  name: {{ fact_argo_merged_config.apps['utils'].app_namespace }}
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ fact_argo_merged_config.apps['utils'].argocd_app_name }}
  namespace: { fact_argo_merged_config.apps[fact_argo_merged_config.argocd_appname].app_namespace }}

  finalizers:
    - resources-finalizer.argocd.argoproj.io

spec:
  project: default
  syncPolicy:
    syncOptions:
      - CreateNamespace=true
      - PrunePropagationPolicy=foreground

    automated:
      prune: true
      selfHeal: true

  source:
    repoURL: {{ fact_argo_merged_config.gitrepo_host_fqdn }}/{{ fact_argo_merged_config.gitrepo_owner }}/{{ fact_argo_merged_config.gitrepo_repo }}.git
    targetRevision: {{ fact_argo_merged_config.apps['utils'].application_gitrepo_tag }}
    path: {{ fact_argo_merged_config.root_app_gitrepo_path }}/utils
    plugin:
      name: envsubst
      env:
{% for item in fact_argo_merged_config.apps | dict2items %}
{% for itemvalue in item.value | ansible.utils.remove_keys(target=['sub_apps']) | dict2items %}
        - name: "{{ item.key }}_{{itemvalue.key}}"
          value: {{ itemvalue.value | to_yaml(default_style='\"') }}
{% endfor %}
{% for subapp in item.value['sub_apps'] | dict2items %}
{% for subappvalue in subapp.value | dict2items %}
        - name: "{{ item.key }}_{{subapp.key}}_{{subappvalue.key}}"
          value: {{ subappvalue.value | to_yaml(default_style='\"') }}
{% endfor %}
{% endfor %}
{% endfor %}
  destination:
    server: "https://kubernetes.default.svc"
    namespace: {{ fact_argo_merged_config.apps['utils'].app_namespace }}

