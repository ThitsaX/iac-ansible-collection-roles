apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{ rook_ceph_namespace }}

resources:
- {{ rook_gitrepo_location }}/rook/deploy/examples/crds.yaml
- {{ rook_gitrepo_location }}/rook/deploy/examples/common.yaml
- {{ rook_gitrepo_location }}/rook/deploy/examples/operator.yaml

patches:
- patch: |-
    apiVersion: v1
    kind: ConfigMap
    metadata:
      name: rook-ceph-operator-config
    data:
      ROOK_CSI_KUBELET_DIR_PATH: {{ rook_csi_kubelet_dir_path }}
      ROOK_ENABLE_DISCOVERY_DAEMON: "true"
