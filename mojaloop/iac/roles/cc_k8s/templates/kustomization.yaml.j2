apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{ rook_ceph_namespace }}

resources:
- crds.yaml
- common.yaml
- operator.yaml

patches:
- patch: |-
    apiVersion: v1
    kind: ConfigMap
    metadata:
      name: rook-ceph-operator-config
      namespace: {{ rook_ceph_namespace }}
    data:
      ROOK_CSI_KUBELET_DIR_PATH: {{ rook_csi_kubelet_dir_path }}
      ROOK_ENABLE_DISCOVERY_DAEMON: "true"
