apiVersion: v1
kind: ConfigMap
metadata:
  name: aws-auth
  namespace: kube-system
data:
  mapRoles: |
    - rolearn: {{ eks_cluster_iam_role_arn }}
      username: system:node:{{ "{{ EC2PrivateDNSName }}" }}
      groups:
        - system:bootstrappers
        - system:nodes
    - rolearn: {{ eks_access_role_arn }}
      username: cluster-admin
      groups:
        - system:masters