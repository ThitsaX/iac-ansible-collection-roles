version: '3.6'

services:
  vault:
    image: hashicorp/vault:{{ vault_image_version }}
    container_name: vault
    restart: on-failure:10
    ports:
      - "{{ vault_listening_port }}:{{ vault_listening_port }}"
    cap_add:
      - IPC_LOCK
    volumes:
      - vault-volume:/data
    healthcheck:
      retries: 5
    command: server -dev -dev-root-token-id="{{ vault_root_token }}"
  caddy: # The reverse proxy that manages traffic for vault
    build: ./caddybuild
    container_name: caddy
    restart: unless-stopped
    volumes:
      - {{ vault_root_dir}}/Caddyfile:/etc/caddy/Caddyfile # Config file for Caddy
      - caddy_data:/data
      - caddy_conf:/config
    ports:
      - "80:80"
      - "443:443"
volumes:
  vault-volume: {} # runtime data for vault
  caddy_data: {} # runtime data for caddy
  caddy_conf: {} # configuration file for Caddy