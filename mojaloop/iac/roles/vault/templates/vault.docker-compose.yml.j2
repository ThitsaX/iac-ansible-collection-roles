version: '3.6'

services:
  vault:
    image: hashicorp/vault:{{ vault_image_version }}
    container_name: vault
    restart: on-failure:10
    ports:
      - "8200:8200"
    cap_add:
      - IPC_LOCK
    volumes:
      - vault-volume:/data
    healthcheck:
      retries: 5
    command: server -dev -dev-root-token-id="{{ vault_root_token }}"
volumes:
  vault-volume: {} # runtime data for vault