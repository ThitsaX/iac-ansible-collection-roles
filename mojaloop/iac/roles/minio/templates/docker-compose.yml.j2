version: '3.7'

# Settings and configurations that are common for all containers
x-minio-common: &minio-common
  image: quay.io/minio/minio:{{ minio_image_version }}
{% if num_minio_nodes == 1 and num_data_drives_per_node == 1 %}
  command: server --console-address ":9001" /data1/minio
{% elif num_minio_nodes == 1 and num_data_drives_per_node > 1 %}
  command: server --console-address ":9001" /data{1...{{ num_data_drives_per_node }}}/minio
{% else %}
  command: server --console-address ":9001" http://minio{1...{{ num_minio_nodes }}}/data{1...{{ num_data_drives_per_node }}}
{% endif %}
  expose:
    - "9000"
    - "9001"
  environment:
    MINIO_ROOT_USER: {{ minio_root_user }}
    MINIO_ROOT_PASSWORD: {{ minio_root_password }}
  healthcheck:
    test: ["CMD", "mc", "ready", "local"]
    interval: 5s
    timeout: 5s
    retries: 5

# limiting the number of minio nodes to 1
# loop can be used when scaling it up in future
# also limiting the data drives to 1 , as there is only one docker-extra volume provisioned in docker node
services:
{% for i in range(num_minio_nodes) %}
  minio{{ i + 1}}:
   <<: *minio-common
   hostname: minio{{ i + 1 }}
   volumes:
{% for j in range(num_data_drives_per_node) %}
     - data{{ i + 1 }}-{{ j + 1 }}:/data{{ j + 1 }}
{% endfor %}
{% endfor %}
  nginx:
    image: nginx:{{ nginx_image_version }}
    hostname: nginx
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    ports:
      - "9000:9000"
      - "9001:9001"
    depends_on:
{% for i in range(num_minio_nodes) %}
      - minio{{ i + 1 }}
{% endfor %}

volumes:
#  extra:
#   external:
#     name: "{{ docker_extra_volume_name }}"
{% for i in range(num_minio_nodes) %}
{% for j in range(num_data_drives_per_node) %}
  data{{ i + 1 }}-{{ j + 1 }}:
{% endfor %}
{% endfor %}
